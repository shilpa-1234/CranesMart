<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:layout_marginTop="@dimen/dimen_7dp"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_marginLeft="5dp"
    android:layout_marginRight="5dp"
    android:layout_marginBottom="20dp"
    android:weightSum="3"
    android:layout_height="wrap_content"
    android:orientation="vertical">
<androidx.cardview.widget.CardView
    android:layout_marginBottom="2dp"
    android:layout_marginLeft="@dimen/dimen_1dp"
    android:layout_marginRight="@dimen/dimen_1dp"
    android:background="@color/colorWhite"
    card_view:cardBackgroundColor="@color/colorWhite"
    android:layout_weight="1"
    android:layout_marginTop="2dp"
    android:outlineSpotShadowColor="@color/gray"
    android:outlineAmbientShadowColor="@color/white"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <ImageView
            android:scaleType="center"
            android:id="@+id/a2"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:src="@drawable/producty" />
        <TextView
            android:textStyle="bold"
            android:layout_marginTop="@dimen/dimen_5dp"
            android:layout_marginLeft="7dp"
            android:layout_marginRight="@dimen/dimen_7dp"
            android:maxLines="1"
            android:textColor="#0A527E"
            android:text="T shirt"
            android:id="@+id/tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_marginTop="7dp"
            android:maxLines="1"
            android:layout_marginLeft="7dp"
            android:textColor="@color/opaque_black"
            android:text="rs.500"
            android:id="@+id/price"
            android:layout_width="130dp"
            android:layout_height="wrap_content" />

        <ImageView
            android:layout_marginBottom="@dimen/dimen_5dp"
            android:paddingBottom="@dimen/dimen_10dp"
            android:layout_marginTop="-5dp"
            android:id="@+id/wishlist"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_gravity="right"
            android:layout_marginRight="10dp"
            android:background="@mipmap/wishlist" />

    </LinearLayout>
</androidx.cardview.widget.CardView>
</LinearLayout>