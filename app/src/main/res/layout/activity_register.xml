<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >
    <LinearLayout
        android:background="@drawable/screenbackground"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_marginBottom="@dimen/dimen_30dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginRight="30dp"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="30dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="85dp"
            android:paddingRight="85dp"
            android:src="@drawable/logo" />
        <LinearLayout
            android:backgroundTint="#00a0e3"
            android:background="#00a0e3"
            android:layout_width="match_parent"
            android:layout_height="5dp"/>
        <LinearLayout
            android:background="#124583"
            android:backgroundTint="#124583"
            android:layout_width="match_parent"
            android:layout_height="5dp"/>
    </LinearLayout>

    <LinearLayout
        android:background="@drawable/bg1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:baselineAligned="false"
            android:padding="40dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            app:layout_constraintBottom_toBottomOf="parent">
            <TextView
                android:id="@+id/signin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="30dp"
                android:fontFamily="@font/worksans_medium"
                android:gravity="center_horizontal"
                android:text="Sign In"
                android:textAlignment="center"
                android:textColor="@color/btnbg"
                android:textSize="20dp"
                android:textStyle="bold" />
            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">
                    <com.google.android.material.textfield.TextInputLayout
                        android:backgroundTint="#BFBCBC"
                        android:textColorHint="#777777"
                        android:id="@+id/prov"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
            <EditText
            android:textSize="15dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textEmailAddress"
            android:maxLines="1"
            android:id="@+id/username1"
            android:drawableLeft="@drawable/ic_baseline_permn_identity_24"
            android:hint="Enter Your name"
            android:textColor="#000"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:drawablePadding="19dp"
            android:backgroundTint="#BAB6B6"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
                android:textColorHint="#999"/>
                    </com.google.android.material.textfield.TextInputLayout>
                    <com.google.android.material.textfield.TextInputLayout
                        android:backgroundTint="#BFBCBC"
                        android:textColorHint="#777777"
                        android:id="@+id/prov0"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
        <EditText
            android:layout_marginTop="10dp"
            android:textSize="15dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textEmailAddress"
            android:maxLines="1"
            android:id="@+id/mail1"
            android:drawableLeft="@drawable/ic_baseline_mail_outline_24"
            android:hint="Enter Your Email"
            android:textColor="#000"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:drawablePadding="19dp"
            android:backgroundTint="#BAB6B6"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:textColorHint="#999"/>
                    </com.google.android.material.textfield.TextInputLayout>
                    <com.google.android.material.textfield.TextInputLayout
                        android:backgroundTint="#BFBCBC"
                        android:textColorHint="#777777"
                        android:id="@+id/prov1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
        <EditText
            android:textSize="15dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPassword"
            android:maxLines="1"
            android:id="@+id/password1"
            android:drawableLeft="@drawable/ic_baseline_lock_24"
            android:hint="Enter Your Password"
            android:layout_marginTop="10dp"
            android:textColor="#000"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:drawablePadding="19dp"
            android:backgroundTint="#BAB6B6"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:textColorHint="#999"/>
                    </com.google.android.material.textfield.TextInputLayout>
                    <com.google.android.material.textfield.TextInputLayout
                        android:backgroundTint="#BFBCBC"
                        android:textColorHint="#777777"
                        android:id="@+id/prov2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

        <EditText
            android:textSize="15dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:maxLines="1"
            android:maxLength="10"
            android:id="@+id/mobile"
            android:drawableLeft="@drawable/ic_baseline_dialpad_24"
            android:hint="Enter Your mobile number"
            android:layout_marginTop="10dp"
            android:textColor="#000"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:drawablePadding="19dp"
            android:backgroundTint="#BAB6B6"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:textColorHint="#999"/>
                    </com.google.android.material.textfield.TextInputLayout>
                    <com.google.android.material.textfield.TextInputLayout
                        android:backgroundTint="#BFBCBC"
                        android:textColorHint="#777777"
                        android:id="@+id/prov3"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
        <EditText
            android:textSize="15dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:id="@+id/referral"
            android:drawableLeft="@drawable/ic_baseline_permn_identity_24"
            android:hint="Enter Your referral"
            android:layout_marginTop="10dp"
            android:textColor="#000"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:drawablePadding="19dp"
            android:backgroundTint="#BAB6B6"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:textColorHint="#999"/>
                    </com.google.android.material.textfield.TextInputLayout>

        <Button
            android:fontFamily="@font/worksans_medium"
            android:backgroundTint="@color/btnbg"
            android:layout_width="130dp"
            android:layout_height="35dp"
            android:layout_marginTop="30dp"
            android:layout_marginLeft="80dp"
            android:layout_marginRight="80dp"
            android:text="Sign Up"
            android:id="@+id/button"
            android:background="@drawable/rectangle"
            android:layout_gravity="center_horizontal"
            />

        <TextView
            android:layout_marginTop="30dp"
            android:id="@+id/fgtpass"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:text="ForgetPassword?"
            android:textAlignment="center"
            android:textColor="#124583"
            android:textSize="15dp" />

        <LinearLayout
            android:id="@+id/line"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/Create"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:layout_marginBottom="10dp"
                android:gravity="center_horizontal"
                android:text="Already a Member?"
                android:textAlignment="center"
                android:textColor="#272927"
                android:textSize="15dp" />

            <TextView
                android:textStyle="bold"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:layout_marginBottom="20dp"
                android:gravity="center_horizontal"
                android:text="Log In"
                android:textAlignment="center"
                android:textColor="#6e8cb2"
                android:textSize="15dp" />
        </LinearLayout>
                </LinearLayout>
            </ScrollView>
        </LinearLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </LinearLayout>
</LinearLayout>

