<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorWhite"
    android:orientation="vertical"
    tools:context=".Activity.RechargeActivity">
    <LinearLayout
        android:weightSum="2"
        android:id="@+id/linear"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:background="@drawable/back"
        android:orientation="horizontal">
        <ImageView
            android:layout_weight="0.40"
            android:id="@+id/backward"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="0dp"
            android:layout_marginTop="15dp"
            android:paddingLeft="0dp"
            android:paddingTop="10dp"
            android:paddingRight="00dp"
            android:paddingBottom="10dp"
            android:src="@drawable/ic_baseline_arrow_back_24"
            />
        <ImageView
            android:padding="45dp"
            android:layout_weight="1.20"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="00dp"
            android:layout_marginTop="-15dp"
            android:src="@drawable/logo" />
    </LinearLayout>
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <androidx.cardview.widget.CardView
            android:layout_marginTop="1dp"
            android:id="@+id/cardprepaid"
            android:layout_marginRight="@dimen/dimen_20dp"
            android:layout_marginLeft="@dimen/dimen_20dp"
            app:cardBackgroundColor="@color/white"
            android:background="@color/white"
            android:layout_marginBottom="@dimen/dimen_1dp"
            android:layout_width="wrap_content"
            android:layout_height="450dp">
    <LinearLayout
        android:layout_marginBottom="@dimen/dimen_10dp"
        android:layout_marginRight="@dimen/dimen_20dp"
        android:layout_marginLeft="@dimen/dimen_20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorWhite"
        android:orientation="horizontal">
        <TextView
            android:padding="@dimen/dimen_15dp"
            android:layout_marginBottom="@dimen/dimen_40dp"
            android:layout_marginTop="@dimen/dimen_10dp"
            android:textSize="15dp"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:gravity="center"
            android:textColor="#000"
            android:text="Recharge And Pay Bill For"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
</LinearLayout>

    <RelativeLayout
        android:layout_marginTop="@dimen/dimen_30dp"
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:context=".MainActivity">
        <com.google.android.material.tabs.TabLayout
            app:layout_anchorGravity="bottom"
            android:id="@+id/tabLayout"
            android:layout_marginLeft="@dimen/dimen_10dp"
            android:layout_marginRight="@dimen/dimen_10dp"
            app:tabMode="scrollable"
            app:tabIndicatorColor="@color/btnbg"
                app:tabTextAppearance="@style/MyCustomTabText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white">
        </com.google.android.material.tabs.TabLayout>
        <EditText
            android:layout_marginBottom="@dimen/dimen_10dp"
            android:layout_below="@+id/tabLayout"
            android:background="#C5C2C2"
            android:layout_width="match_parent"
            android:layout_height="1dp"/>
        <androidx.viewpager.widget.ViewPager
            android:layout_marginTop="@dimen/dimen_10dp"
            android:id="@+id/viewPager"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tabLayout"
            android:layout_centerInParent="true"
            tools:layout_editor_absoluteX="8dp" />
    </RelativeLayout>
        </androidx.cardview.widget.CardView>
</LinearLayout>
</LinearLayout>