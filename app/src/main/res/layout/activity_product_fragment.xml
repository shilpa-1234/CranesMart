<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    android:orientation="vertical"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#fafafa">

    <!-- TODO: Update blank fragment layout -->

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#fafafa"
        tools:context=".fragment.SubcategoryActivity">
        <RelativeLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dimen_45dp"
            android:background="@drawable/back"
            >
        </RelativeLayout>
        <TextView
            android:layout_marginLeft="@dimen/dimen_20dp"
            android:layout_marginTop="10dp"
            android:id="@+id/textview1"
            android:textSize="@dimen/dimen_12dp"
            android:textColor="#000"
            android:text=" Mobile\nrecharge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <androidx.recyclerview.widget.RecyclerView
            android:layout_marginLeft="@dimen/dimen_7dp"
            android:id="@+id/recyclerviewsubcategory1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="15dp" />

        <ImageView
            android:visibility="gone"
            android:layout_gravity="center"
            android:id="@+id/noproduct"
            android:layout_marginTop="70dp"
            android:src="@drawable/noproduct"
            android:layout_width="180dp"
            android:layout_height="180dp"/>
    </LinearLayout>
</ScrollView>