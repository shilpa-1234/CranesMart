<androidx.cardview.widget.CardView android:layout_centerInParent="true"
    app:cardBackgroundColor="#fafafa"
    android:paddingTop="20dp"
    android:paddingBottom="10dp"
    android:layout_marginBottom="10dp"
    app:cardCornerRadius="5dp"
    android:layout_marginLeft="2dp"
    android:layout_marginRight="2dp"
    android:layout_marginTop="20dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <RelativeLayout
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="20dp"
        android:layout_width="match_parent"
        android:layout_height="75dp">

        <ImageView
            android:id="@+id/wallet1"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_centerVertical="true"
            android:src="@drawable/wallerrupees" />
        <TextView
            android:layout_marginTop="@dimen/dimen_20dp"
            android:textStyle="bold"
            android:textSize="10dp"
            android:id="@+id/Premium"
            android:layout_marginLeft="20dp"
            android:layout_toRightOf="@+id/wallet1"
            android:textColor="#000"
            android:text="Withdrawl Form"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:textStyle="bold"
            android:id="@+id/text1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/Premium"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="5dp"
            android:layout_toRightOf="@+id/wallet1"
            android:text="Cranes mart wallet"
            android:textColor="#777"
            android:textSize="10dp" />

        <TextView
            android:layout_marginRight="@dimen/dimen_20dp"
            android:layout_alignParentRight="true"
            android:gravity="right"
            android:layout_marginTop="@dimen/dimen_28dp"
            android:id="@+id/rupees"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/Premium"
            android:text="Rs.100"
            android:textColor="#000"
            android:textSize="10dp"
            android:textStyle="bold" />
        <TextView
            android:layout_marginTop="7dp"
            android:layout_below="@+id/text1"
            android:layout_alignParentLeft="true"
            android:layout_toLeftOf="@+id/cmHistory"
            android:id="@+id/time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="25 Minutes Ago"
            android:textColor="#777"
            android:textSize="10dp"
           />
    </RelativeLayout>
</androidx.cardview.widget.CardView>
