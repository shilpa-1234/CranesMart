<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#fafafa"
    tools:context=".Activity.AddwalletActivity">
    <LinearLayout
        android:weightSum="2"
        android:id="@+id/linear"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@mipmap/topbg"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/menu"
            android:layout_width="wrap_content"
            android:layout_height="45dp"
            android:layout_gravity="center_vertical"
            android:layout_weight="0.2"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:src="@drawable/ic_baseline_arrow_back_24"
            app:tint="#000" />

        <TextView
            android:gravity="center"
            android:textSize="@dimen/dimen_20dp"
            android:textColor="@color/btnbg"
            android:text="Add Wallet"
            android:layout_gravity="center"
            android:layout_weight="1.60"
            android:layout_width="80dp"
            android:layout_height="47dp"
            />

    </LinearLayout>
<com.google.android.material.card.MaterialCardView
    app:cardBackgroundColor="@color/white"
    android:background="@color/colorWhite"
    android:layout_marginRight="@dimen/dimen_20dp"
    android:layout_marginLeft="@dimen/dimen_20dp"
    android:layout_marginTop="@dimen/dimen_20dp"
    android:layout_marginBottom="@dimen/dimen_30dp"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <RelativeLayout
        android:background="@color/colorWhite"
        android:layout_marginRight="@dimen/dimen_20dp"
        android:layout_marginLeft="@dimen/dimen_20dp"
        android:layout_marginTop="@dimen/dimen_10dp"
        android:layout_marginBottom="@dimen/dimen_20dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
<TextView
    android:id="@+id/currentbal"
    android:textColor="#777"
    android:textSize="@dimen/dimen_10dp"
    android:text="Current balance"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"/>
        <TextView
            android:layout_below="@+id/currentbal"
            android:id="@+id/currentbalancd"
            android:textColor="#000"
            android:textSize="@dimen/dimen_20dp"
            android:text="â‚¹ 500"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <View
            android:id="@+id/view"
            android:layout_marginTop="@dimen/dimen_5dp"
            android:background="#EAE4E4"
            android:layout_below="@+id/currentbalancd"
            android:layout_width="match_parent"
            android:layout_height="1dp"/>
        <TextView
            android:layout_marginTop="@dimen/dimen_10dp"
            android:layout_below="@+id/view"
            android:id="@+id/wallet"
            android:textColor="#777"
            android:textSize="@dimen/dimen_12dp"
            android:text="Wallet"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <TextView
            android:layout_marginTop="2dp"
            android:layout_below="@+id/wallet"
            android:id="@+id/walletdis"
            android:textColor="#777"
            android:textSize="@dimen/dimen_12dp"
            android:text="Add Money To Your Wallet And Made one click Payment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/constraint"
            android:layout_below="@+id/walletdis"
            android:background="#fafafa"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
        <LinearLayout
            android:layout_marginTop="15dp"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_gravity="start"
            android:background="@drawable/border2"
            android:drawableLeft="#018786"
            android:elevation="4dp"
            android:gravity="start"
            android:inputType="text"
            android:maxLines="1"
            android:orientation="horizontal"
            android:paddingStart="15dp"
            android:textCursorDrawable="@null"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:layout_marginRight="@dimen/dimen_20dp"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/rupeessymbol"
                 />


            <EditText
                android:maxLines="1"
                android:id="@+id/searchlist"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:backgroundTint="#ffffff"
                android:ellipsize="end"
                android:fontFamily="@font/worksans_medium"
                android:gravity="center|left"
                android:hint="Enter Amount"
                android:inputType="number"
                android:textColor="#4b4f54"
                android:textColorHint="#939598"
                android:textStyle="normal" />

        </LinearLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>
        <Button
            android:layout_below="@+id/constraint"
            android:id="@+id/button"
            android:layout_width="130dp"
            android:layout_height="35dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginLeft="80dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="80dp"
            android:background="@drawable/rectangle"
            android:backgroundTint="@color/btnbg"
            android:text="Continue"
            android:textColor="@color/white" />
    </RelativeLayout>
</com.google.android.material.card.MaterialCardView>
</LinearLayout>